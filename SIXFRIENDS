#include <iostream>
using namespace std;

int main() {
	int n;
	cin>>n;
	int arr[n][2];
	for(int i=0;i<n;i++){
	    int x,y;
	    cin>>arr[i][0]>>arr[i][1];
	    
	    
	}
	for(int i=0;i<n;i++)
	{
	    if(3*arr[i][0]>2*arr[i][1])
	    cout<<2*arr[i][1]<<endl;
	    else
	    cout<<3*arr[i][0]<<endl;
	}
	return 0;
}
