#include <bits/stdc++.h>

using namespace std;

int main() {
	int t;
	cin>>t;
	for(int i=0;i<t;i++)
	{
	    int n,arr[n],psum=0,nsum=0,temp;
	    cin>>n;
	    for(int j=0;j<n;j++)
	    {
	        cin>>temp;
	        if(temp<0)
	        nsum++;
	        else if(temp>0)
	        psum++;
	    }
	    if(n%2!=0)
	    cout<<"-1"<<endl;
	    else if(n%2==0)
	    {
	       // for(int j=0;j<n;j++)
	       // {
	            
	       // }
	        cout<<abs(psum-nsum)/2<<endl;
	}
}
    return 0;
}
